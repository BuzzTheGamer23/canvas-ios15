{
  "name": "Teacher",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start --config=rn-cli.config.js",
    "test": "jest",
    "lint": "eslint *.js __tests__/*.js src test",
    "lint:fix": "eslint --fix *.js __tests__/*.js src test",
    "lint:watch": "esw -w",
    "flow": "flow",
    "extract-strings": "format-message extract \"src/**/*.js\" index.ios.js -o i18n/locales/en.json",
    "danger": "danger"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "flux-standard-action": "^1.2.0",
    "format-message": "^5.1.1",
    "hoist-non-react-statics": "^1.2.0",
    "moment": "2.18.1",
    "querystring": "^0.2.0",
    "react": "16.0.0-alpha.6",
    "react-native": "0.43.0",
    "react-native-blur": "^2.0.0",
    "react-native-button": "^1.8.2",
    "react-native-device-info": "^0.10.1",
    "react-native-image-picker": "^0.26.3",
    "react-native-interactable": "https://github.com/wix/react-native-interactable",
    "react-native-keyboard-aware-scroll-view": "^0.2.8",
    "react-native-keyboard-spacer": "^0.3.1",
    "react-native-navigation": "next",
    "react-native-progress": "^3.2.0",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.2",
    "route-parser": "^0.0.5",
    "url-parse": "^1.1.8",
    "uuid": "3.0.1",
    "react-native-search-bar": "3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-jest": "19.0.0",
    "babel-preset-react-native": "1.9.1",
    "danger": "https://github.com/benkraus/danger-js/tarball/with-distribution",
    "eslint": "^3.16.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-flowtype": "AnIrishDuck/eslint-plugin-flowtype#0a0327429590c161b72e6818ab28adbe9e6b1e55",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.0.1",
    "eslint-watch": "^3.0.0",
    "flow-bin": "0.40.0",
    "format-message-cli": "^5.1.1",
    "format-message-generate-id": "^5.1.0",
    "jest": "^19.0.2",
    "react-test-renderer": "~15.4.0-rc.4",
    "redux-freeze": "^0.1.5",
    "redux-logger": "^3.0.1",
    "redux-mock-store": "^1.2.2",
    "timezone-mock": "^0.0.0",
    "xhr2": "^0.1.4"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|my-project|react-native-button)"
    ],
    "setupFiles": [
      "<rootDir>/test/scripts/jestSetup.js"
    ],
    "moduleNameMapper": {
      "^.+\\.html$": "<rootDir>/test/scripts/html-mock"
    },
    "verbose": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".android.js",
      "flow/*.js",
      "/src/api/canvas-api/",
      "/src/modules/staging",
      "dangerfile.js"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "json-summary",
      "lcov",
      "text",
      "html"
   ],
   "coverageThreshold": {
     "global": {
       "branches": 85,
       "functions": 80,
       "lines": 90,
       "statements": 90
     }
   }
  }
}
